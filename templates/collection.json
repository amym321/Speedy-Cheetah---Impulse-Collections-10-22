{
  "sections": {
    "collection-header": {
      "type": "collection-header",
      "custom_css": [
        "h1 {font-size: 0px;}"
      ],
      "settings": {
        "enable": true,
        "collection_image_enable": true,
        "parallax": false,
        "parallax_direction": "top"
      }
    },
    "promo-grid": {
      "type": "promo-grid",
      "blocks": {
        "banner": {
          "type": "banner",
          "settings": {
            "heading": "Banner promotion",
            "text": "Add the details of your promotion in smaller text",
            "link": "",
            "label": "Shop now",
            "color_tint": "#e95454",
            "color_tint_opacity": 8,
            "framed": false
          }
        },
        "advanced": {
          "type": "advanced",
          "disabled": true,
          "settings": {
            "subheading": "Limited time",
            "heading": "Announce your promotion",
            "textarea": "Include the smaller details of your promotion in text below the title.",
            "cta_text1": "Shop This",
            "cta_link1": "",
            "cta_text2": "Shop All",
            "cta_link2": "",
            "video_url": "",
            "width": "100",
            "height": 500,
            "text_size": 120,
            "text_align": "vertical-center horizontal-center",
            "focal_point": "center",
            "color_accent": "rgba(0,0,0,0)",
            "boxed": false,
            "framed": false
          }
        }
      },
      "block_order": [
        "banner",
        "advanced"
      ],
      "disabled": true,
      "settings": {
        "full_width": false,
        "gutter_size": 20,
        "space_above": true,
        "space_below": false
      }
    },
    "main-collection": {
      "type": "main-collection",
      "blocks": {
        "collection_description": {
          "type": "collection_description",
          "settings": {
          }
        },
        "product_grid": {
          "type": "product_grid",
          "settings": {
            "enable_collection_count": true,
            "per_row": 2,
            "rows_per_page": 10,
            "mobile_flush_grid": false
          }
        },
        "subcollections": {
          "type": "subcollections",
          "settings": {
            "subcollections_per_row": 2
          }
        }
      },
      "block_order": [
        "collection_description",
        "product_grid",
        "subcollections"
      ],
      "custom_css": [
        ".grid-product__tag--sold-out {background-color: gray; color: white;}"
      ],
      "settings": {
        "enable_sidebar": true,
        "collapsed": false,
        "filter_style": "drawer",
        "enable_color_swatches": false,
        "enable_sort": true
      }
    }
  },
  "order": [
    "collection-header",
    "promo-grid",
    "main-collection"
  ]
}
